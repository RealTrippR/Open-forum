<!DOCTYPE html>
<html lang="en">
<head> 
    <meta charset="UTF-8">
    <title> OpenForum </title>
    <link rel="stylesheet" href="/style.css">
    <style>
    
        #message-container {
          width: 80%;
          max-width: 1200px;
        }
    
        #message-container div {
          background-color: #CCC;
          padding: 5px;
        }
    
        #message-container div:nth-child(2n) {
          background-color: #FFF;
        }
    
        #send-container {
          position: fixed;
          padding-bottom: 30px;
          bottom: 0;
          background-color: white;
          max-width: 1200px;
          width: 80%;
          display: flex;
        }
    
        #message-input {
          flex-grow: 1;
        }
      </style>
    </head>

<body>
<div id="navbar"> </div>
<script src="/loadNavbar.js"> </script>

<div id="thread-message-holder">
    
</div>
<form id="send-container">
    <input type="text" id="message-input">
    <button type="submit" id="send-button">Send</button>
  </form>

<script>
    window.onload = function() {
        window.user = <%- user %>
        window.threadID = <%- threadID %>
        loadNavbar();
        initMessageHolder();
        loadMessages();
    };
</script>
</body>
</html>